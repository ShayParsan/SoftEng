    "@shelex/cypress-allure-plugin": "^2.41.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "18.15.0",
    "@types/react-datepicker": "^4.19.6",
    "allure-commandline": "^2.34.0",
    "autoprefixer": "^10.4.16",
    "cypress": "^14.3.2",
    "cypress-mochawesome-reporter": "^3.8.2",
