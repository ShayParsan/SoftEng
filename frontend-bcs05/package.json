{
  "name": "frontend-bcs05",
  "version": "1.0.2",
  "private": false,
  "files": [
    "server.js",
    ".next/**/*",
    "public/**/*",
    "node_modules/**/*",
    "routes.json"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "node .next/standalone/server.js",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "merge:reports": "mochawesome-merge cypress/reports/mochawesome-json/*.json > cypress/reports/output.json",
    "generate:report": "marge cypress/reports/output.json -f index -o cypress/reports/html",
    "report": "npm run merge:reports && npm run generate:report",
    "e2e:full-report": "npm run cypress:run && npm run report && open cypress/reports/html/index.html",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open":     "npx allure open allure-report",
    "allure:serve":    "npx allure serve allure-results",
    "e2e:allure":      "npm run cypress:run && npm run allure:serve"
  },
  "dependencies": {
    "@testing-library/react": "^16.2.0",
    "@types/react": "18.0.28",
    "bootstrap": "5.2.3",
    "classnames": "^2.3.2",
