    "express": "^5.1.0",
    "frontend-bcs05": "file:",
    "i18next": "^23.7.6",
    "next": "15.2.4",
    "next-i18next": "^15.0.0",
    "react": "^18.3.1",
    "react-datepicker": "^4.16.0",
    "react-dom": "^18.3.1",
    "react-i18next": "^13.4.1",
    "swr": "^2.2.0",
    "use-interval": "^1.4.0"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^22.0.1",
